{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": false,
		"outDir": "../lib",
		"rootDir": ".",
		"declaration": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"lib": [
			"dom",
			"es2015"
		]
	},
	"exclude": [
		"../node_modules"
	],
	"angularCompilerOptions": {
		"genDir": "../compiled"
	}
}